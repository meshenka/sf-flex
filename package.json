{
  "name": "sf-flex",
  "version": "1.0.5",
  "description": "a test application for symfony4",
  "main": "index.js",
  "author": "Sylvain Gogel <sylvain.gogel@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^10.15.1",
    "yarn": "^1.3.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@symfony/webpack-encore": "^0.17.1",
    "bootstrap-sass": "^3.3.7",
    "eslint": "^5.12.1",
    "eslint-plugin-babel": "^5.3.0",
    "husky": "^1.3.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^6.0.6",
    "standard-version": "^4.4.0",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "webpack": "^3.10.0",
    "webpack-notifier": "^1.5.0"
  },
  "scripts": {
    "dev": "npm-run-all dev:*",
    "dev:assets": "encore dev",
    "build:assets": "encore production",
    "build": "npm-run-all build:*",
    "lint": "npm-run-all lint:*",
    "lint:style": "stylelint src/**/*.scss",
    "lint:js": "eslint src/**/*.js",
    "lint:php": "exit 0",
    "test": "npm-run-all test:*",
    "test:unit": "bin/phpspec run -f pretty",
    "test:integration": "exit 0",
    "release": "standard-version --no-verify"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run test:unit"
    }
  }
}
